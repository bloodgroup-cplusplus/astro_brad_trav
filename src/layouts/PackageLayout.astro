---
// library imports 
import { Image } from "@astrojs/image/components";


// component import 
import MainLayout from "./MainLayout.astro";


// utils import 
import {slugify,formatDate} from "../js/utils.js"

// image import 
import gangtok from "/images/post-1.webp"

// import links 
import Link from "../components/Link.astro";

const {frontmatter} = Astro.props;
const{title,description,date,category,author,image} = frontmatter

---
<MainLayout title={title} {description}>
    <header>
        <div class="container">
            <small>
                <a href={`/category/${category}`} class="badge">{category}</a>
            </small>
            <h1 class="h1">{title}</h1>
            <p> <a href={`/author/${slugify(author)}/`}>{author}</a>  {formatDate(date)}  </p>
        </div>
        <Image src={image.src} alt={image.alt} width="1200" height="600" format="webp" fit="cover" quality={80} aspectRatio="5.2" class:list="hero-image"/>
        <div>
            <h2 class="h2">Itinerary</h2>
        </div>
    </header>
    <div class="post-content">
        <div class="content">
            <slot/>
        </div>
    </div>
    <div
    class="container"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }}
  >
    
    <Link
      href="/"
      style="secondary"
      text="Book Now /བོོོཀ་ནོཝ་ "
      icon={{
        name: "tabler:phone",
        side: "right",
      }}
    />
  </div>
    
</MainLayout>